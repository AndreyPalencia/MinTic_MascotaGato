@page
@model CuidadoEnCasa.App.Frontend.Pages.EditModel
@{
    
    int IdMascota_Gato = Model.Gato.Id;
}
<h2> Edicion de un Mascota Gato: @Model.Gato.Nombre</h2>
<form  method="post">
    <div class= "form-group">
        <input type= "hidden" asp-for = "Gato.Id"/>
    </div>
    <div class= "form-group">
        <label asp-for = "Gato.Codigo"></label>
        <input asp-for = "Gato.Codigo" class="form-control">
        <span class = "text-danger" asp-validation-for = "Gato.Codigo"></span>
    </div>
    <div class= "form-group">
        <label asp-for = "Gato.Nombre"></label>
        <input asp-for = "Gato.Nombre" class="form-control">
        <span class = "text-danger" asp-validation-for = "Gato.Nombre"></span>
    </div>
    <div class= "form-group">
        <label asp-for = "Gato.Color"></label>
        <input asp-for = "Gato.Color" class="form-control">
        <span class = "text-danger" asp-validation-for = "Gato.Color"></span>
    </div>
    <div class= "form-group">
        <label asp-for = "Gato.Peso"></label>
        <input asp-for = "Gato.Peso" class="form-control">
        <span class = "text-danger" asp-validation-for = "Gato.Peso"></span>
    </div>
    <div class= "form-group">
        <label asp-for = "Gato.Raza"></label>
        <input asp-for = "Gato.Raza" class="form-control">
        <span class = "text-danger" asp-validation-for = "Gato.Raza"></span>
    </div>
    <div class= "form-group">
        <label asp-for = "Gato.Temperatura"></label>
        <input asp-for = "Gato.Temperatura" class="form-control">
    </div>
    <div class= "form-group">
        <label asp-for = "Gato.EstadoAnimo"></label>
        <input asp-for = "Gato.EstadoAnimo" class="form-control">
    </div>
    <button type="submit" class= "btn btn-primary">Grabar</button>
    <a class="btn btn-primary table-btn" asp-page="./SignosVitales/ListSignos" asp-route-Id="@IdMascota_Gato">
        <i aria-hidden="true"></i> Signos Vitales 
    </a>
    <a asp-page="./Edit" class="btn btn-primary"> Agregar Veterinario</a>
    <a asp-page="./Servicios"  class="btn btn-primary">Regresar</a>
    </div>
</form>

